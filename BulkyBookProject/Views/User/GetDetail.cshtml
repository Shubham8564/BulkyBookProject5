@model IEnumerable<Category>
@{
    ViewData["Title"] = "Get Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User Detail</h2>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered   table-hover " style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Gender
                </th>
                <th>
                    EmailAddress
                </th>
                <th>
                    PhoneNumber
                <th>
                    Address
                </th>
                <th>
                    Action
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Gender
                    </td>
                    <td>
                        @obj.EmailAddress
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        @obj.Address
                    </td>
                    
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="EditDetail" asp-route-id="@obj.Id" class="btn btn-primary mx-2 "> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}
